            <p id="periodDisplayTimeStart3"></p>
            <p id="periodDisplayEnd3"></p>
        </ul>
        <br>
        <ul>
            <p id="periodDisplayPeriod4"></p>
            <p id="periodDisplayTimeStart4"></p>
            <p id="periodDisplayEnd4"></p>
        </ul>
        <br>
        <ul>
